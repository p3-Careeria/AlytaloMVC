@model AlytaloMVC.Valot

@{
    ViewBag.Title = "Säädä valoa";
    string paalla = "";
    if (Model.Kaynnissa.Value)
    {
        paalla = "Valo on päällä";
    }
    else { paalla = "Valo on pois päältä"; }

}

<p>&nbsp;</p>
<h2 class="col-md-10">Säädä valoa</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ValotId)
  
    <div class="form-horizontal">
        <div class="form-group">
           <!-- TÄMÄ? -->
            <fieldset class="col-md-10">
                <input class="form-control" type="text" placeholder="@paalla" disabled="">
                @Html.HiddenFor(model => model.Kaynnissa)
            </fieldset>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Teho, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Teho, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Teho, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group" style="margin-top:15px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tallenna &raquo;" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}

<div class="col-md-10" style="margin-top:20px">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
