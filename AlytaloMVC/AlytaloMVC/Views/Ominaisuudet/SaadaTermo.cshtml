@model AlytaloMVC.Termostaatti

@{
    ViewBag.Title = "Säädä Termostaattia";
}
<p>&nbsp;</p>
<h2 class="col-md-10">Säädä termostaattia</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TermoId)

<div class="form-horizontal">

    <div class="form-group">
        <p class="col-md-10">Nykyinen lämpötila</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Lampo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Lampo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="col-md-10">Tavoite lämpotila</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tavoite, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tavoite, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group" style="margin-top:15px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tallenna &raquo;" class="btn btn-primary btn-lg" />
        </div>
    </div>
</div>
}

<div class="col-md-10" style="margin-top:20px">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
